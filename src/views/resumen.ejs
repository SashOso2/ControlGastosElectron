<%- include('partials/header') %>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <div class="resumen">
        <div class="resumen-ingresos">
            <i class="fa-solid fa-arrow-up"></i>
            <span  id="ingresos-monto">S/ 0.00</span>
            <small>Ingresos este mes</small>
        </div>
        <div class="resumen-gastos">
            <i class="fa-solid fa-arrow-down"></i>
            <span  id="gastos-monto">S/ 0.00</span>
            <small>Gastos este mes</small>
        </div>
        <div class="resumen-total">
            <i class="fa-solid fa-wallet"></i>
            <span id="saldo-disponible">S/ 0.00</span>
            <small>Saldo disponible</small>
        </div>
    </div>

    <div class="graficas">
        <div class="graficas-lateral">
            <div class="cont-canvas">
                <h4 class="canvas_titulo">Ingresos Mensual</h4>
                <canvas id="canvas_ingresos"></canvas>
            </div>
            <div class="cont-canvas">
                <h4 class="canvas_titulo">Gastos Mensual</h4>
                <canvas id="canvas_gastos"></canvas>
            </div>
        </div> 
        <div class="graficas-central">
            <div class="cont-canvas">
                <h4 class="canvas_titulo">Comparativa Mensual de Ingresos y Gastos</h4>
                <canvas width="300" height="200" id="canvas_anual"></canvas>
            </div>
        </div>
    </div>
<script src="js/graficas.js"></script>
<script src="js/resumen.js"></script>
<%- include('partials/footer') %>